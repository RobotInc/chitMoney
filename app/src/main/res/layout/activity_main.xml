<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="robot_inc.net.ram.MainActivity">

    <EditText
        android:id="@+id/input"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/auc"
        android:ems="10"
        android:inputType="number"
        android:layout_alignRight="@+id/rb4"
        android:layout_alignEnd="@+id/rb4" />

    <TextView
        android:id="@+id/out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/input"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/pay"
        android:layout_toEndOf="@+id/input"
        android:textColor="@color/colorAccent"
        android:textSize="30sp"
        android:layout_alignLeft="@+id/rb2"
        android:layout_alignStart="@+id/rb2" />

    <RadioButton
        android:id="@+id/rb6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:text="400000"
        android:textSize="24dp"
        android:layout_alignBaseline="@+id/rb3"
        android:layout_alignBottom="@+id/rb3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <RadioButton
        android:id="@+id/rb1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:checked="true"
        android:text="50000"
        android:textSize="24dp"
        android:layout_below="@+id/input"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RadioButton
        android:id="@+id/rb5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="300000"
        android:textSize="24dp"
        android:layout_below="@+id/rb2"
        android:layout_alignLeft="@+id/rb6"
        android:layout_alignStart="@+id/rb6" />

    <RadioButton
        android:id="@+id/rb2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="75000"
        android:textSize="24dp"
        android:layout_below="@+id/out"
        android:layout_alignLeft="@+id/rb5"
        android:layout_alignStart="@+id/rb5" />

    <RadioButton
        android:id="@+id/rb4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="200000"
        android:textSize="24dp"
        android:layout_below="@+id/rb1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RadioButton
        android:id="@+id/rb3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:text="100000"
        android:textSize="24dp"
        android:layout_below="@+id/rb4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/auc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AUCTION"
        android:textColor="@android:color/background_dark"
        android:textSize="24sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PAYABLE"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="24sp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/out"
        android:layout_alignStart="@+id/out" />


</RelativeLayout>